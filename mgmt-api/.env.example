# Server Configuration
PORT=4000
MONGODB_URI=mongodb://localhost:27017/ai_chat365
JWT_EXPIRES_IN=1d

# Redis Configuration (for Socket.IO)
REDIS_URL=redis://localhost:6379

# CORS Configuration
FRONTEND_URL=http://localhost:8888

# Authentication
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=adminPassword123

# ElasticSearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=password

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key

# Logging
LOG_LEVEL=debug
ENABLE_ACCESS_LOGS=true

# Environment
NODE_ENV=development

# Email Service
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@aichat365.com

# End-User API Integration
END_USER_API_URL=http://localhost:3000
END_USER_API_KEY=your-integration-key
